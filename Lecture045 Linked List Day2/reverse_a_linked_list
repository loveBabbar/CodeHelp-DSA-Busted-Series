LinkedListNode<int> * reverse(LinkedListNode<int> *head){
      if(head == NULL || head -> next == NULL)
        return head;
     LinkedListNode<int>* chotaHead = reverse(head -> next);
    head -> next -> next = head;
    head -> next = NULL;
    
    return chotaHead;
}
